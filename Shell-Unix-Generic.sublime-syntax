    tac |
    tail |
    tar |
    tcsh |
    tee |
    thtool |
    tie |
    tig |
    timeout |
    top |
    touch |
    tput |
    tr |
    tracerout |
    tsort |
    tty |
    umount |
    uname |
    unexpand |
    unil |
    uniq |
    units |
    unix2dos |
    unix2mac |
    unlink |
    unpack |
    unprotoize |
    unrar |
    unrtf |
    unshar |
    untic |
    unwhiteout |
    unxz |
    unzip |
    unzipsfx |
    updatedb |
    uptime |
    useradd |
    userdel |
    usermod |
    users |
    uudecode |
    uuencode |
    vi |
