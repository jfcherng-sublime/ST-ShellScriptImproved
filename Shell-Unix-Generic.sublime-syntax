%YAML 1.2
---
# http://www.sublimetext.com/docs/3/syntax.html
name: ShellScript Improved
file_extensions:
  - bash
  - sh
  - zsh
  - .bash_aliases
  - .bash_functions
  - .bash_login
  - .bash_logout
  - .bash_profile
  - .bash_variables
  - .bashrc
  - .profile
  - .textmate_init
  - .zshrc
first_line_match: ^#!.*\b(bash|zsh|sh)\b|^#\s*-\*-[^*]*mode:\s*shell-script[^*]*-\*-
scope: source.shell
variables:
  identifier: (?:[a-zA-Z_][0-9a-zA-Z_]*)
  variable_name: '(?x:
    (?: {{identifier}} )
    (?: \[ (?: [${}\[\]0-9a-zA-Z_]+ ) \] )?
  )'
  version_string: (?:[0-9_.+-][0-9a-zA-Z_.+-]*)
  cmd_unknown: (?:(?:[^/\\\s><&;|!()`]|\\.)+)
  cmd_privilege: '(?x:
    gksudo |
    gksu |
    sudoedit |
    sudo |
    su
  )'
  cmd_external: '(?x:
    (
      apt |
      dbus |
      git |
      glib |
      gnutls |
      gpg |
      grub |
      ssh |
      yum
    )(?:-[a-zA-Z_]+)*

    |

    (
      fc |
      php |
      system-config
    )-(?:[a-zA-Z_]+)*

    |

    7z |
    7za |
    apropos |
    aptitude |
    ar |
    aria2c |
    aspell |
    autoconf |
    automake |
    awk |
    base64 |
    basename |
    bash |
    bc |
    bower |
    brew |
    browserify |
    bzip2 |
    cal |
    cat |
    cc |
    cfdisk |
    chfn |
    chgrp |
    chkconfig |
    chmod |
    chown |
    chpasswd |
    chroot |
    chsh |
    cksum |
    clang |
    clang\+\+\ |
    clear |
    cmake |
    cmp |
    column |
    comm |
    compass |
    composer |
    cp |
    cron |
    crontab |
