    expect |
    expr |
    fdformat |
    fdisk |
    fgrep |
    file |
    find |
    finger |
    fmt |
    fold |
    format |
    free |
    fsck |
    ftp |
    function |
    fuser |
    fusermount |
    g\+\+ |
    gawk |
    gcc |
    gem |
    getfacl |
    gpasswd |
    grep |
    groupadd |
    groupdel |
    groupmd |
    groups |
    grunt |
    gulp |
    gzip |
    head |
    hg |
    homebrew |
    hostname |
    htop |
    iconv |
    id |
    ifconfig |
    ifdown |
    ifup |
    import |
    info |
    insmod |
    jar |
    java |
    javac |
    join |
    kermit |
    killall |
    kmod |
    latex |
    ldconfig |
    less |
    lftp |
    link |
    llvm |
    ln |
    locate |
    logname |
    look |
    loout |
    lpc |
    lpq |
    lpr |
